<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.hengrunjiankang.health.widget.CircularImage
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/doctor_headbg"
        android:id="@+id/iv_item_icon"
        android:padding="0.5dp"
        android:background="@drawable/oval_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="擅长:"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:layout_alignLeft="@+id/iv_item_icon"
        android:layout_alignRight="@id/iv_item_icon"
        android:layout_below="@+id/iv_item_icon"
        android:layout_alignBaseline="@+id/tv_item_des"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="擅长:"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:layout_below="@+id/v_1"
        android:id="@+id/tv_item_des"
        android:layout_toRightOf="@+id/iv_item_icon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_icon"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_1">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_name"
        android:textSize="16dp"
        android:text="name"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_job"
            android:textSize="10dp"
            android:text="job"
            android:textColor="@color/gray2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_unit"
            android:textSize="11dp"
            android:text="job"
            android:textColor="@color/gray3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_toRightOf="@+id/iv_item_icon"
        android:layout_below="@+id/ll_1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray_line"
        android:id="@+id/v_1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_below="@+id/tv_item_des"
        android:layout_marginTop="5dp"
        android:background="@color/gray_line"
        />
    <TextView
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:text="立即预约"
        android:textSize="@dimen/txt_normal"
        android:textColor="@color/orange2"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/v_1"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/orange_stroke_round"
        android:id="@+id/tv_item_bespock"/>
</RelativeLayout>
