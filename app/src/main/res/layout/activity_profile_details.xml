<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgcolor"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/layout_title_text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/page_weight"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/page_weight"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_high"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="档案编号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal"
                    />

                <TextView
                    android:id="@+id/tv_profile_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/txt_small"/>
            </LinearLayout>

            <include layout="@layout/layout_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_high"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal"
                    />

                <TextView
                    android:id="@+id/tv_profile_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/txt_small"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_illness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"

                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/red_bar"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="16dp"
                    android:paddingTop="2dp"
                    android:text="描述症状"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_small"
                    />

                <TextView
                    android:id="@+id/tv_profile_illness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/txt_small"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_other_illness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/red_bar"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="16dp"
                    android:paddingTop="2dp"
                    android:text="其它症状信息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_small"
                    />

                <TextView
                    android:id="@+id/tv_profile_other_illness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/txt_small"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_yyjc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bar_high"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="检查报告"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_line"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_profile_yyjc1"
                        style="@style/add_profile_img"
                        />

                    <ImageView
                        android:id="@+id/iv_profile_yyjc2"
                        style="@style/add_profile_img"
                        />

                    <ImageView
                        android:id="@+id/iv_profile_yyjc3"
                        style="@style/add_profile_img"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_profile_bl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bar_high"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="病例"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_line"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_profile_bl1"
                        style="@style/add_profile_img"
                        />

                    <ImageView
                        android:id="@+id/iv_profile_bl2"
                        style="@style/add_profile_img"
                        />

                    <ImageView
                        android:id="@+id/iv_profile_bl3"
                        style="@style/add_profile_img"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_yyfa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bar_high"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="用药方案"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_marginLeft="10dp"
                    android:background="@color/gray_line"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_profile_yyfa1"
                        style="@style/add_profile_img"
                        />

                    <ImageView
                        android:id="@+id/iv_profile_yyfa2"
                        style="@style/add_profile_img"
                        />

                    <ImageView
                        android:id="@+id/iv_profile_yyfa3"
                        style="@style/add_profile_img"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"></View>

        </LinearLayout>

    </ScrollView>
</LinearLayout>