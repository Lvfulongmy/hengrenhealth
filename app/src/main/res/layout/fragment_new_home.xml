<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="164dp"
            >

            <com.hengrunjiankang.health.widget.AutoRollViewPager
                android:id="@+id/vp_home_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.hengrunjiankang.health.widget.AutoRollViewPager>

            <com.hengrunjiankang.health.widget.CirclePageIndicator
                android:id="@+id/cpi_home_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vp_home_banner"
                android:layout_alignParentRight="true"
                android:padding="10dp"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_home_1"
                style="@style/new_home_btn_ll"
                >

                <ImageView
                    style="@style/new_home_btn_img"
                    android:src="@mipmap/newhome_jiankangbaogao"
                    />

                <TextView
                    style="@style/new_home_btn_txt"
                    android:text="健康报告"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:background="@color/gray_line"
                />

            <LinearLayout
                android:id="@+id/ll_home_2"
                style="@style/new_home_btn_ll"
                >

                <ImageView
                    style="@style/new_home_btn_img"
                    android:src="@mipmap/newhome_zhuanjiajianyi"
                    />

                <TextView
                    style="@style/new_home_btn_txt"
                    android:text="专家建议"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:background="@color/gray_line"
                />

            <LinearLayout
                android:id="@+id/ll_home_3"
                style="@style/new_home_btn_ll"
                >

                <ImageView
                    style="@style/new_home_btn_img"
                    android:src="@mipmap/newhome_jiankangdangan"
                    />

                <TextView
                    style="@style/new_home_btn_txt"
                    android:text="健康档案"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/gray_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_home_4"
                style="@style/new_home_btn_ll2"
                >

                <ImageView
                    style="@style/new_home_btn_img2"
                    android:src="@mipmap/newhome_fuyaojilu"
                    />

                <TextView
                    style="@style/new_home_btn_txt"
                    android:text="服药记录"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:background="@color/gray_line"
                />

            <LinearLayout
                android:id="@+id/ll_home_5"
                style="@style/new_home_btn_ll2"
                >

                <ImageView
                    style="@style/new_home_btn_img2"
                    android:src="@mipmap/newhome_jiankangtixing"
                    />

                <TextView
                    style="@style/new_home_btn_txt"
                    android:text="健康提醒"/>
            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_home_sort"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_high"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_home_1"
                style="@style/new_home_rb"
                android:text="评价最优"

                />

            <RadioButton
                android:id="@+id/rb_home_2"
                style="@style/new_home_rb"
                android:text="价格最优"
                />

            <RadioButton
                android:id="@+id/rb_home_3"
                style="@style/new_home_rb"
                android:text="资质最高"
                />
        </RadioGroup>
        <com.hengrunjiankang.health.widget.ListViewNoScroll
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:id="@+id/lv_home_list"
            ></com.hengrunjiankang.health.widget.ListViewNoScroll>


    </LinearLayout>

</ScrollView>