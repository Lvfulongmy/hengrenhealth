<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:myattr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/gray3"
                android:textSize="13dp"
                />

            <TextView

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray2"/>

            <TextView
                android:id="@+id/tv_item_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="指标"
                android:textColor="@color/gray3"
                android:textSize="@dimen/txt_small"
                />

            <TextView

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray2"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"

                android:orientation="vertical"
                >

                <com.hengrunjiankang.health.widget.TextViewDrawRight
                    android:id="@+id/tv_item_index_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/green_flag"
                    android:padding="5dp"
                    android:text="合适水平"
                    android:textColor="@color/green_index"
                    android:textSize="@dimen/txt_small"/>

                <com.hengrunjiankang.health.widget.TextViewDrawRight
                    android:id="@+id/tv_item_index_orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/orange_flag"
                    android:padding="5dp"
                    android:text="临界水平"
                    android:textColor="@color/orange_index"
                    android:textSize="@dimen/txt_small"/>

                <com.hengrunjiankang.health.widget.TextViewDrawRight
                    android:id="@+id/tv_item_index_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/red_flag"
                    android:padding="5dp"
                    android:text="极高水平fdasfdadf ad fslf aslfj"
                    android:textColor="@color/red_index"
                    android:textSize="@dimen/txt_small"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"
            />
    </LinearLayout>
