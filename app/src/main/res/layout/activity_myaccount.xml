<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgcolor"
              android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

  <include layout="@layout/layout_title_text">

  </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/page_weight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/editbar_ll"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="头像"
                  />

                <RadioGroup
                    android:id="@+id/rg_account_sex"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/rb_account_male"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/rb_buttonicon"
                        android:button="@null"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/male"
                        android:layout_marginLeft="3dp"/>

                    <RadioButton
                        android:id="@+id/rb_account_female"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:button="@null"
                        android:background="@drawable/rb_buttonicon"
                        android:layout_marginLeft="20dp"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/female"
                        android:layout_marginLeft="3dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="真事姓名"
                    />

                <EditText
                    android:id="@+id/et_account_name"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="手机号"
                    />

                <TextView
                    android:id="@+id/tv_account_mobile"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="身份证号"
                    />

                <EditText
                    android:id="@+id/et_account_idno"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="出生日期"

                    />

                <TextView
                    android:id="@+id/tv_account_birthday"
                    style="@style/editbar_et"
                    android:drawableRight="@mipmap/small_mark"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <include layout="@layout/layout_line_mt"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="固定电话"
                    />

                <EditText
                    android:id="@+id/et_account_tell"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="学历"
                    />

                <EditText
                    android:id="@+id/et_account_edu"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="职业"
                    />

                <EditText
                    android:id="@+id/et_account_vocation"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <include layout="@layout/layout_line_mt"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="职务"
                    />

                <EditText
                    android:id="@+id/et_account_job"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="工作单位"
                    />

                <EditText
                    android:id="@+id/et_account_wrok"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="所在地"
                    />

                <TextView
                    android:id="@+id/tv_account_area"
                    style="@style/editbar_et"
                    android:drawableRight="@mipmap/small_mark"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>

            <LinearLayout
                style="@style/editbar_ll"
                >

                <TextView
                    style="@style/editbar_txt"
                    android:text="详细地址"
                    />

                <EditText
                    android:id="@+id/et_account_address"
                    style="@style/editbar_et"
                    />
            </LinearLayout>
            <include layout="@layout/layout_line"/>

            <TextView
                android:id="@+id/tv_account_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg_orange"
                android:clickable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_big"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>