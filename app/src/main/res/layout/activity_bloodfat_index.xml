<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ababab"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:clipToPadding="true">
    <include layout="@layout/layout_title_text2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="550"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9c9c9c"/>

        <TextView
            android:id="@+id/tv_index_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="测量时间"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_middle"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9c9c9c"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_index_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_bloodfat_header"></include>

                <include layout="@layout/layout_ur_list_hearder"></include>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>